<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.coffee.Coffee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#efdcd5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/coffee" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#d3b8ae"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/txt_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Android Coffee Price Calculator"
            android:textStyle="bold"
            android:textColor="#725b53"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txt_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textSize="24sp"
            android:textColor="#725b53"
            android:layout_below="@id/txt_order"/>

        <Button
            android:id="@+id/more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:onClick="display_result"
            android:text="More"
            android:textColor="#725b53"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_below="@id/txt_order"/>

        <Button
            android:id="@+id/less_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:layout_alignParentRight="true"
            android:text="Less"
            android:textColor="#725b53"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_below="@id/txt_order"/>

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:text="Price"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#725b53"/>

        <Button
            android:id="@+id/pay_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Pay"
            android:textSize="24sp"
            android:textColor="#725b53"/>

        <TextView
            android:id="@+id/txt_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_price"
            android:layout_above="@id/pay_button"
            android:layout_centerInParent="true"
            android:text="0"
            android:textSize="24sp"
            android:textColor="#725b53"/>

    </RelativeLayout>

</LinearLayout>
