<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.coffee.Coffee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#ffffff">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/starbucks" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#ffffff"
        android:padding="8dp">

        <TextView
            android:id="@+id/txt_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="STARBUCKS COFFEE ORDER"
            android:textStyle="bold"
            android:textColor="#1b5e20"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txt_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textSize="24sp"
            android:textColor="#1b5e20"
            android:layout_below="@id/txt_order"/>

        <Button
            android:id="@+id/more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:onClick="display_result"
            android:text="More"
            android:textColor="#ffffff"
            android:textAppearance="?android:textAppearanceLarge"
            android:background="@drawable/button1"
            android:layout_below="@id/txt_order"/>

        <Button
            android:id="@+id/less_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_alignParentRight="true"
            android:text="Less"
            android:textColor="#ffffff"
            android:textAppearance="?android:textAppearanceLarge"
            android:background="@drawable/button1"
            android:layout_below="@id/txt_order"/>

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Price"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#1b5e20"/>

        <Button
            android:id="@+id/order_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Order"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:background="@drawable/button1" />

        <TextView
            android:id="@+id/txt_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_price"
            android:layout_above="@id/order_button"
            android:layout_centerInParent="true"
            android:text="0"
            android:textSize="24sp"
            android:textColor="#1b5e20"/>

    </RelativeLayout>

</LinearLayout>